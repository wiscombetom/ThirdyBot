{
  "compilerOptions": {
      "target": "ESNext",
      "module": "commonjs",
      "moduleResolution": "node",
      "baseUrl": "./",
      "rootDir": "./src/",
      "outDir": "./dist/",
      "strict": true,
      "importHelpers": true,
      "experimentalDecorators": true,
      "esModuleInterop": true,
      "skipLibCheck": true,
      "allowSyntheticDefaultImports": true,
      "resolveJsonModule": true,
      "forceConsistentCasingInFileNames": true,
      "noImplicitAny": true,
      "removeComments": true,
      "sourceMap": false,
      "typeRoots": [
          "node_modules/@types"
      ]
  },
  "files": [
      "src/index.ts"
  ],
  "include": [
      "./**/*.ts"
  ],
  "exclude": [
      "node_modules",
      "dist"
  ],
}